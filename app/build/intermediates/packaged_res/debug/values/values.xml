<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="background_color">#DEDEDE</color>
    <color name="black">#FF000000</color>
    <color name="gray">#BABABA</color>
    <color name="horizontal_progress_color">#0675C9</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="text_color">@color/black</color>
    <color name="white">#FFFFFFFF</color>
    <dimen name="app_bar_height">60dp</dimen>
    <dimen name="back_button_size">16dp</dimen>
    <dimen name="border_radius">4dp</dimen>
    <dimen name="my_button_large_height">58dp</dimen>
    <dimen name="my_button_small_height">48dp</dimen>
    <string name="app_name">Kolay Hedef</string>
    <string name="calender">Takvim</string>
    <string name="close">Kapat</string>
    <string name="did_not_register">Henüz üye değil misin?</string>
    <string name="home">Ana Sayfa</string>
    <string name="log_in">Giriş Yap</string>
    <string name="log_in_by_google">Google ile giriş Yap</string>
    <string name="profile">Profil</string>
    <string name="save">Kaydet</string>
    <string name="search">Keşfet</string>
    <string name="unknown_error">Hata Meydana Geldi</string>
    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_corner</item>
    </style>
    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_main_button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ProgressDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustPan|stateAlwaysHidden</item>
    </style>
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">@dimen/border_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/border_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/border_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/border_radius</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextColor">@color/gray</item>
    </style>
    <style name="TextInputLayout.EditText">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/bg_cursor</item>
    </style>
    <style name="Theme.KolayHedef" parent="Theme.MaterialComponents.Light.NoActionBar">
        
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">@color/background_color</item>
        
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Theme.Splash" parent="Theme.KolayHedef">
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:colorPrimaryDark">@color/background_color</item>
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    <declare-styleable name="MyButton">
        <attr format="string" name="text"/>
        <attr format="reference" name="icon"/>
        <attr format="color" name="color"/>
        <attr format="enum" name="btnTheme">
            <enum name="dark" value="0"/>
            <enum name="colored" value="1"/>
            <enum name="transparent" value="2"/>
        </attr>
        <attr format="enum" name="btnSize">
            <enum name="small" value="0"/>
            <enum name="large" value="1"/>
            <enum name="square" value="2"/>
        </attr>
    </declare-styleable>
</resources>